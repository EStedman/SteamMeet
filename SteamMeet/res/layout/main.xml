<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User Name:"
            android:id="@+id/persona" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Steam Profile:"
            android:id="@+id/profileSite" android:layout_below="@+id/persona" android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" android:gravity="center_horizontal" android:maxWidth="250dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Clan ID: "
            android:id="@+id/clan" android:layout_below="@+id/profileSite" android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="State: 0-5"
            android:id="@+id/activeState" android:layout_below="@+id/clan" android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
</RelativeLayout>