<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="Please Enter Your E-Mail Below" android:id="@+id/emailTitle"
              android:layout_gravity="center_horizontal" android:layout_marginTop="40dp"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:inputType="textEmailAddress" android:ems="10" android:id="@+id/emailEnter"
              android:layout_gravity="center_horizontal" android:hint="example@blank.com"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Be Advised: Please make sure you enter the\n correct e-mail account you would like to\n be linked to this app because at this point in \ndevelopment you will not be able to change this."
              android:id="@+id/emailWarning" android:layout_gravity="center_horizontal"
              android:layout_marginTop="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/emailConfirm" android:layout_gravity="center_horizontal" android:layout_marginTop="20dp"/>
</LinearLayout>