<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/imageView"
                  android:layout_alignParentTop="false" android:layout_centerHorizontal="true"
                  android:layout_alignParentEnd="false"
                  android:layout_alignParentStart="false" android:baselineAlignBottom="false"
                  android:layout_marginTop="30dp"
                  android:layout_alignBottom="@+id/persona" android:paddingBottom="30dp" android:cropToPadding="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="User Name:"
                  android:id="@+id/persona" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                  android:layout_marginTop="200dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Steam Profile:"
                  android:id="@+id/profileSite" android:layout_centerHorizontal="true"
                  android:layout_marginTop="250dp" android:gravity="center_horizontal"
                  android:maxWidth="250dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="E-Mail: Null"
                  android:id="@+id/emailText" android:layout_centerHorizontal="true"
                  android:layout_marginTop="350dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="State: 0-5"
                  android:id="@+id/activeState" android:layout_centerHorizontal="true"
                  android:layout_marginTop="400dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event's"
                android:id="@+id/toEvents"
                android:layout_marginTop="24dp" android:layout_below="@+id/activeState"
                android:layout_toLeftOf="@+id/activeState"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link E-Mail"
                android:id="@+id/link" android:layout_alignTop="@+id/toEvents"
                android:layout_toRightOf="@+id/activeState"/>
    </RelativeLayout>
</LinearLayout>