<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lay" android:clickable="false" android:padding="10dp" android:background="#ffffff">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:id="@+id/sub_text"
            android:singleLine="false" android:password="false"
            android:textColor="#050505" android:layout_below="@+id/main_text" android:layout_alignEnd="@+id/main_text"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/main_text"
            android:autoText="false" android:textColor="#050505"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
</RelativeLayout>